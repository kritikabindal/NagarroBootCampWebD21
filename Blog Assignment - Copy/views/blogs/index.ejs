<!----Navbar -->
<%- include("../partials/navbar") %>

    <!----Header of the page-->
    <%- include("../partials/header") %>


        <main class="container">
            <!---Card to display content-->
            <%- include("../partials/flash") %>

                <div class="row blogs">
                    <%for(let blog of blogs){%>
                        <div class="">
                            <div class="card border text-center mt-3" style="width: 30rem; margin: 20px auto;">
                                <h5 class="card-title">
                                    <%=blog.name%>
                                </h5>
                                <img class="card-img-top" src="<%=blog.img%>" alt="image not found" style=" height:20rem ;width:
                            auto;">
                                <div class="card-body">

                                    <p class="card-text">
                                        <%=blog.desc%>
                                    </p>
                                    <a href="/blogs/<%=blog.id%>" class="btn btn-primary">view blog</a>
                                </div>
                            </div>
                        </div>
                        <%}%>
                </div>
        </main>
        <!-----Footer of the blog-->
        <%- include("../partials/footer") %>